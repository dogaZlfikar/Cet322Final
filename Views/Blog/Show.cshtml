@model Blog

<div class="container">
    <div class="row pt-4 pb-3">
        @if (Model.UserId == @UserManager.GetUserId(User) || User.IsInRole(Sd.RoleUserAdmin) )
        {
            <div class="text-end">
                <a asp-controller="Blog" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"> <i class="bi bi-trash"></i> Delete Blog</a>
            </div>
        }
    </div>
    <div class="col-md">
            <article class="blog-post">
            <h2 class="display-5 link-body-emphasis mb-1">@Model.Name</h2>
            <p class="blog-post-meta">@Model.CreatedTime by @Model.UserId</p>
            <p class="overflow-scroll">@Model.Content</p>
          </article>
        </div>
    </div>