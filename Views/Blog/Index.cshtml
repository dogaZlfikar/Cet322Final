@model List<Blog>

<div class="container">
    <div class="row pt-4 pb-3">
        @if (User.IsInRole(Sd.RoleUserWriter) || (User.IsInRole(Sd.RoleUserAdmin)))
        {
            <div class="text-end">
                <a asp-controller="Blog" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Create Blog</a>
            </div>
        }
    </div>
</div>
<div class="row mb-2">
@foreach (var obj in Model)
{
    <div class="col-md-6">
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-success-emphasis">Category</strong>
                <h3 class="mb-0">@obj.Name</h3>
                <p class="mb-auto">@obj.Content</p>
                <a asp-controller="Blog" asp-action="Show" asp-route-id="@obj.Id" class="icon-link gap-1 icon-link-hover stretched-link">
                    Continue reading
                </a>
                <div class="mb-1 text-body-secondary">@obj.CreatedTime</div>
            </div>
        </div>
        </div>
}
</div>
