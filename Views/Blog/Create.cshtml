@model Blog

<form method="post">
    <input hidden asp-for="UserId" value="@UserManager.GetUserId(User)"/>
    <input hidden asp-for="CreatedTime" value="0001-01-01 00:00:00"/>
    <div class="container">
        <div class="border p-3 mt-4">
            <div asp-validation-summary="All"></div>
            <div class="row pb-2">
                <h2 class="text-center">Create blog post</h2>
                <hr/>
            </div>
            <div class="row pb-2">
                <label>Name</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row pb-2">
                <label>Content</label>
                <input asp-for="Content" class="form-control"/>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="row pb-2">
                <h1>@UserManager.GetUserId(User)</h1>
                <input disabled asp-for="UserId" value="@UserManager.GetUserId(User)" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary form-control">Create blog</button>
            <a asp-controller="Blog" asp-action="Index" class="btn btn-secondary form-control">Back</a>
        </div>
    </div>
</form>
@section Scripts
{
    @{<partial name="_ValidationScriptsPartial"/>}
}
